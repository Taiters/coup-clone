    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/server/app.py"
        },
        {
            "name": "Client",
            "request": "launch",
            "runtimeArgs": [
                "start"
            ],
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}/client/",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }
    ]
}